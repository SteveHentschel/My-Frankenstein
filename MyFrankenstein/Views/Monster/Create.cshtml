@model MyFrankenstein.Models.Monster

@{
    ViewBag.Title = "My Frankenstein - Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Monster", FormMethod.Post, 
    new { enctype = "multipart/form-data" } )) 
{  
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true,"Something is awry.")

    <fieldset>
        <legend>New Monster</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Name, new { style = "width: 275px;" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Family)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Family, new { style = "width: 275px;" })
            @Html.ValidationMessageFor(model => model.Family)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description) 
            <span style = "font-size: 0.9em; padding-left: 10px">(500 char max)</span>
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description, new { style = "width: 400px; height: 150px" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>
 
        <div class="editor-label">
            Upload @Html.LabelFor(model => model.ImgName) ?
        </div>
        <div class="editor-field">   
            @Html.TextBox("file", "", new { type = "file" })  
        </div>          
        
        <p style = "margin: 25px 0 0 0"> 
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
